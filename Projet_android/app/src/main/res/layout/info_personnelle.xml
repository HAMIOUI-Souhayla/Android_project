<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:autofillHints="Adresse"
    android:backgroundTintMode="screen"
    tools:context=".UpdateActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/aaalah"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="154dp">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="414dp"
        android:layout_height="57dp"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarmain"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
            app:backgroundTint="@color/cardview_dark_background"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView3"
                android:layout_width="62dp"
                android:layout_height="55dp"
                android:layout_marginStart="0dp"
                android:src="@drawable/profile"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="2dp" />
            <!--            android:background="@drawable/round"-->

            <TextView
                android:id="@+id/usernameonmainactivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="78dp"
                android:layout_marginEnd="342dp"
                app:srcCompat="@drawable/logo" />
            <TextView
                android:id="@+id/textView"
                android:layout_width="351dp"
                android:layout_height="41dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="66dp"
                android:layout_marginTop="94dp"
                android:layout_marginEnd="-6dp"
                android:layout_toEndOf="@+id/imageView4"
                android:fontFamily="sans-serif-condensed-light"
                android:text=""
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </com.google.android.material.appbar.MaterialToolbar>


    </com.google.android.material.appbar.AppBarLayout>



        <Spinner
            android:id="@+id/adres"
            android:layout_width="334dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="39dp"
            android:layout_marginEnd="39dp"
            android:layout_marginBottom="324dp"
            android:hint="Adresse"
            android:drawableRight="@drawable/profile"
            android:paddingRight="10dp"
            android:paddingStart="22dp"
            android:background="@drawable/radius_spinner"
            android:textAlignment="viewStart" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar"
            android:layout_width="wrap_content"
            android:layout_height="534dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="151dp"
            app:background="@drawable/radius4"
            app:backgroundTint="@android:color/transparent"
            app:backgroundTintMode="src_over"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.324"
            app:strokeColor="@color/black"
            tools:ignore="BottomAppBar,MissingConstraints" />
        <EditText
            android:id="@+id/nom"
            android:layout_width="334dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="429dp"
            android:background="@drawable/radius"
            android:ems="10"
            android:hint="nom"
            android:inputType="text"
            android:paddingStart="22dp"
            android:textAlignment="viewStart"
            android:textColor="#070707" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="93dp"
            android:layout_marginEnd="-1dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Modifier mes informations"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="DuplicateIds" />

        <ImageButton
            android:id="@+id/photoprofile"
            android:layout_width="186dp"
            android:layout_height="176dp"
            android:layout_above="@+id/prenom"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="112dp"
            android:layout_marginEnd="113dp"
            android:layout_marginBottom="85dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />

        <EditText
            android:id="@+id/prenom"
            android:layout_width="334dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="377dp"
            android:background="@drawable/radius"
            android:ems="10"
            android:hint="PrÃ©nom"
            android:inputType="text"
            android:paddingStart="22dp"
            android:textAlignment="viewStart"
            android:textColor="#070707" />

        <EditText
            android:id="@+id/email"
            android:layout_width="334dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="39dp"
            android:layout_marginEnd="39dp"
            android:layout_marginBottom="268dp"
            android:background="@drawable/radius"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingStart="22dp"
            android:textAlignment="viewStart"
            android:textColor="#070707" />

        <EditText
            android:id="@+id/ancientpassword"
            android:layout_width="334dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="39dp"
            android:layout_marginEnd="39dp"
            android:layout_marginBottom="214dp"
            android:background="@drawable/radius"
            android:drawableRight="@drawable/baseline_visibility_off_24"
            android:paddingRight="10dp"
            android:longClickable="false"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="22dp"
            android:textAlignment="viewStart"
            android:textColor="#070707" />

        <Button
            android:id="@+id/valider"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="65dp"
            android:background="@drawable/radius"
            android:backgroundTint="#000000"
            android:text="Valider"
            android:textColor="#FFFFFF"
            app:iconTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.808" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>