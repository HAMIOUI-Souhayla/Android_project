<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="screen"
    tools:context=".Main" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/aaalah"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-101dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="132dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="132dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="S'inscrire"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="387dp"
            android:layout_height="213dp"
            android:layout_above="@+id/nom"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="12dp"
            app:srcCompat="@drawable/logo" />


        <EditText
            android:id="@+id/nom"
            android:layout_width="360dp"
            android:layout_height="43dp"
            android:layout_above="@+id/prenom"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="38dp"
            android:background="@drawable/radius"
            android:ems="10"
            android:hint="Nom"
            android:inputType="text"
            android:paddingStart="22dp"

            android:textAlignment="viewStart"
            android:textColor="#070707"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.978" />

        <EditText
            android:id="@+id/prenom"
            android:layout_width="360dp"
            android:layout_height="43dp"
            android:layout_above="@+id/email"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"

            android:layout_marginEnd="16dp"
            android:layout_marginBottom="38dp"
            android:background="@drawable/radius"
            android:ems="10"
            android:hint="Prénom"

            android:inputType="text"
            android:paddingStart="22dp"
            android:textAlignment="viewStart"
            android:textColor="#070707"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.978" />

        <EditText
            android:id="@+id/email"
            android:layout_width="360dp"
            android:layout_height="43dp"
            android:layout_above="@+id/password"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="38dp"
            android:background="@drawable/radius"
            android:ems="10"
            android:hint="Email"

            android:inputType="textEmailAddress"
            android:paddingStart="22dp"
            android:textAlignment="viewStart"
            android:textColor="#070707"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.978" />

        <EditText
            android:id="@+id/password"
            android:layout_width="360dp"
            android:layout_height="43dp"
            android:layout_above="@+id/confirmpassword"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="38dp"
            android:background="@drawable/radius"
            android:ems="10"
            android:hint="Mot de passe"
            android:drawableRight="@drawable/baseline_visibility_off_24"
            android:paddingRight="10dp"
            android:longClickable="false"
            android:inputType="textPassword"
            android:paddingStart="22dp"
            android:textAlignment="viewStart"
            android:textColor="#070707"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.978" />

        <EditText
            android:id="@+id/confirmpassword"
            android:layout_width="360dp"
            android:layout_height="43dp"
            android:layout_above="@+id/sinscrire"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="38dp"
            android:background="@drawable/radius"
            android:ems="10"
            android:hint="Confirmer le mot de passe"
            android:drawableRight="@drawable/baseline_visibility_off_24"
            android:paddingRight="10dp"
            android:longClickable="false"
            android:inputType="textPassword"
            android:paddingStart="22dp"
            android:textAlignment="viewStart"
            android:textColor="#070707"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.978" />

        <Button
            android:id="@+id/sinscrire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cmptdeja"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="86dp"
            android:layout_marginEnd="86dp"
            android:layout_marginBottom="10dp"

            android:background="@drawable/radius"
            android:text="S'inscrire"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="normal"
            app:iconTint="#F2391B04" />

        <TextView
            android:id="@+id/cmptdeja"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="47dp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="103dp"
            android:text="J'ai déja un compte "
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>